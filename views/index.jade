extends layout

block content
    h2= title

    form(action='/?form=newsletter', class='form-horizontal', role='form', method='post')
        input(type="hidden", name="_csrf", value="#{csrf}")
        .form-group
            label(for="fieldName", class="col-sm-2 control-label") Name
            .col-sm-4
                input(type="text", class="form-control", id="fieldName", name="name")
        .form-group
            label(for="fieldEmail", class="col-sm-2 control-label") Email
            .col-sm-4
                input(type="email", class="form-control", required, id="fieldName", name="email")
        .form-group
            .col-sm-offset-2.col-sm-4
                button(type="submit", class="btn btn-default") Register
